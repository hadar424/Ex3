
@{
    ViewBag.Title = "Load";
}

<html>
<head>
    <style>
        body {
            background-image: url('/export-map-share.png');
            background-size: 100% 100%;
            margin: 0;
            background-position: center center;
            background-attachment: fixed;
            background-repeat: no-repeat;
        }

        canvas {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            display: block
        }
    </style>
</head>

<body style="margin:0">

    <canvas id="myCanvas"></canvas>
    <script>
        var c = document.getElementById("myCanvas");
        var ctx = c.getContext("2d");

        c.width = window.innerWidth;
        c.height = window.outerHeight;

        var firstTime = 0;
       var oldLon;
        var oldLat;

        var IntervalTime = 1000 / @Session["time"]
        myTimer = (function () {
            $.post("@Url.Action("GetLonLatFile")").done(function (xml) {
            if (xml == "") {
                alert("the animation is over!");
                clearInterval(interval)
            }
            var xmlDoc = $.parseXML(xml),
                $xml = $(xmlDoc);
            lon = $xml.find("Lon").text();
            lat = $xml.find("Lat").text();

            lon =  parseFloat(lon);
            lat = parseFloat(lat);
            var newLon = (lon + 180) * (c.width / 360);
            var newLat = (lat - 90) * (c.height / -180);
            if (firstTime == 0) {
                ctx.beginPath();
                ctx.arc(newLon, newLat, 4, 0, 2 * Math.PI);
                ctx.fillStyle = 'red';
                ctx.fill();
                ctx.strokeStyle = 'red';
                ctx.lineWidth = 2;
                ctx.stroke();
                ctx.closePath();
                oldLon = newLon;
                oldLat = newLat;
                firstTime = 1;
            } else {
                ctx.moveTo(oldLon, oldLat);
                ctx.lineTo(newLon, newLat);
                ctx.strokeStyle = 'red';
                ctx.lineWidth = 2;
                ctx.stroke();
                oldLon = newLon;
                oldLat = newLat;
            }

            });
        });

        var interval = setInterval(myTimer, IntervalTime);
        myTimer();

    </script>

</body>
</html>