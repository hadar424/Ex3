
@{
    ViewBag.Title = "Index";
}

    <html style="overflow:hidden">


    <body style="margin:0">

        <canvas id="myCanvas" style="width:100%; height:100%;position:absolute;background-size:100% 100%; margin:0; background-image:url('/export-map-share.png')"></canvas>

        <script>
