
@{
    ViewBag.Title = "Index";
}

    <html style="overflow-y:hidden">
    <head>
        <link href="~/Content/IndexSheet.css" rel="stylesheet" type="text/css" />

    </head>

    <body>
        <canvas id="myCanvas" style="width:100%; height:100%;"> </canvas>

        <script>
        var c = document.getElementById("myCanvas");

        var ctx = c.getContext("2d");
        ctx.canvas.width = window.innerWidth;
        ctx.canvas.height = window.innerHeight;
        lon =  parseFloat(@ViewBag.lon);
        lat = parseFloat(@ViewBag.lat);
        var newLon = (lon + 180) * (c.height / 360);
        var newLat = (lat + 90) * (c.height / 180);

        ctx.beginPath();
        ctx.arc(newLon, newLat, 3, 0, 2 * Math.PI);
        ctx.fillStyle = 'red';
        ctx.fill();
        ctx.strokeStyle = 'red';
        ctx.stroke();
        ctx.closePath();
        </script>

    </body>
    </html>
