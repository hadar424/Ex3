
@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <style>
        body {
            background-image: url('/export-map-share.png');
            background-size: 100% 100%;
            margin: 0;
            background-position: center center;
            background-attachment: fixed;
            background-repeat: no-repeat;
        }

        canvas {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            display: block
        }
    </style>
</head>

<body style="margin:0">

    <canvas id="myCanvas"></canvas>
    <script>
        var c = document.getElementById("myCanvas");
        var ctx = c.getContext("2d");

        c.width = window.innerWidth;
        c.height = window.outerHeight;
        
        lon =  parseFloat(@ViewBag.lon);
        lat = parseFloat(@ViewBag.lat);
        if (lon == 200 || lat == 200) {
                clearInterval(interval)
        }
        var newLon = (lon + 180) * (c.width / 360);
        var newLat = (lat + 90) * (c.height / 180);

       ctx.beginPath();
        ctx.arc(newLon, newLat, 4, 0, 2 * Math.PI);
        ctx.fillStyle = 'red';
        ctx.fill();
        ctx.strokeStyle = 'red';
        ctx.lineWidth = 2;
        ctx.stroke();
        ctx.closePath();
    </script>

</body>
</html>
